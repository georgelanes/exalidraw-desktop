{
  "name": "excalidrawdesktop",
  "version": "0.1.0",
  "description": "Excalidraw Desktop",
  "author": "George Lanes Macedo Nascimento",
  "license": "MIT",
  "homepage": "https://github.com/georgelanes/excalidraw-desktop",
  "repository": {
    "type": "git",
    "url": "https://github.com/georgelanes/excalidraw-desktop.git"
  },
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "VITE_DEV_SERVER_URL=http://localhost:5173 bunx concurrently -k \"bunx vite\" \"bunx wait-on http://localhost:5173 && bunx electron .\"",
    "build": "bunx vite build",
    "pack": "bun run build && bunx electron-builder --dir",
    "dist": "bun run build && bunx electron-builder",
    "start": "bunx electron ."
  },
  "dependencies": {
    "@excalidraw/excalidraw": "^0.17.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "vite": "^5.4.8",
    "wait-on": "^7.2.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "build": {
    "appId": "com.excalidraw.desktop",
    "productName": "Excalidraw Desktop",
    "icon": "build/icon.png",
    "files": [
      "electron/**/*",
      "dist/renderer/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Graphics"
    }
  }
}
